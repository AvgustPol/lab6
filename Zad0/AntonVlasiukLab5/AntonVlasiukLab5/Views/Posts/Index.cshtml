@model List<AntonVlasiukLab5.Models.Post>

@{
    ViewBag.Title = "Posts";
}

<div class="text-center">
    <h1>Posts</h1>
</div>


<div class="col-md-12">
    @foreach (var post in Model)
    {
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3><b>@post.Title</b></h3>

                    <div class="row" style="margin:15px 0px 5px 0px">
                        <div class="col-md-11">
                            <button class="btn btn-default">
                                @Html.ActionLink("Edit", "Edit", new { id = post.Id })
                            </button>
                        </div>
                        <div class="col-md-1">
                            @using (Html.BeginForm("Delete", "Posts", FormMethod.Post))
                            {
                                @Html.Hidden("id", post.Id)
                                <button type="submit" class="btn btn-danger">Delete</button>
                            }
                        </div>
                    </div>
                </div>
                <div class="panel panel-body">
                    @post.Body
                </div>

                <div class="panel panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4><b>Comments:</b></h4>
                        </div>

                        <div class="col-md-12 ">
                                @foreach (var comment in post.Comments)
                                {
                                    <div class="col-md-12 panel panel-default " style ='background-color: #f4f3e8;'>
                                        <div class="row">
                                            <div class="col-md-12" style="margin:15px 0px 15px 0px">
                                                @comment.Content
                                                <hr style="width: 100%; color: black; height: 1px; background-color:black;" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-1">
                                                @comment.CreatedAt
                                            </div>

                                            <div class="col-md-9">

                                            </div>
                                            <div class="col-md-1">
                                                <button class="btn btn-default">
                                                    @Html.ActionLink("Edit", "Edit", "Comments", new { id = comment.Id  }, null)
                                                </button>
                                            </div>
                                            <div class="col-md-1">
                                                @using (Html.BeginForm("Delete", "Comments", FormMethod.Post))
                                                {
                                                    @Html.Hidden("id", comment.Id)
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                        </div>

                        <div class="col-md-12 " style="margin:auto 5px">
                            <h5><b>@Html.ActionLink("Add new", "Add", "Comments", new { @id = post.Id }, null)</b></h5>
                        </div>
                     </div>
                </div>

            </div>
        </div>
    }
</div>
